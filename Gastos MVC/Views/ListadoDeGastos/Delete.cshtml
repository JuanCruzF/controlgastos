@model Gastos_MVC.Models.ListadoDeGasto

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar gasto</h1>

<div>
    <h4>Detalles: </h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DetalleCompra)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetalleCompra)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TotalGastado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalGastado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comprador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comprador.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoGastos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoGastos.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ListadoGastosId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a compras</a>
    </form>
</div>
